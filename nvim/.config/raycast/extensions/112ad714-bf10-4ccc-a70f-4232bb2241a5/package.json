{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "apple-reminders",
  "title": "Apple Reminders",
  "description": "Manage Apple Reminders.",
  "icon": "icon.png",
  "author": "thomaslombart",
  "contributors": [
    "tm.wrnr",
    "ir4n",
    "jondelgado",
    "phil_s",
    "michalzuch",
    "ridemountainpig",
    "maxnyby"
  ],
  "owner": "raycast",
  "access": "public",
  "categories": [
    "Productivity",
    "Applications"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "my-reminders",
      "title": "My Reminders",
      "subtitle": "Apple Reminders",
      "description": "View and complete your reminders.",
      "mode": "view",
      "preferences": [
        {
          "name": "displayCompletionDate",
          "type": "checkbox",
          "required": false,
          "label": "Display Completion Date",
          "description": "When enabled, the completion date will be displayed as a list item accessory.",
          "default": false
        },
        {
          "name": "useTimeOfDayGrouping",
          "type": "checkbox",
          "required": false,
          "label": "Use Time of Day Grouping",
          "description": "When enabled, today's reminders will be grouped by the time of day they are due.",
          "default": false
        }
      ]
    },
    {
      "name": "create-reminder",
      "title": "Create Reminder",
      "subtitle": "Apple Reminders",
      "description": "Create and prioritize new reminders.",
      "mode": "view",
      "preferences": [
        {
          "name": "selectDefaultList",
          "type": "checkbox",
          "label": "Initially select the default list",
          "description": "When enabled, the Reminders's default list will be initially selected instead of the last used list.",
          "default": false,
          "required": false
        },
        {
          "name": "selectTodayAsDefault",
          "type": "checkbox",
          "label": "Initially select \"Today\" for new reminders",
          "description": "When enabled, \"Today\" will be initially selected for new reminders instead of no due date.",
          "default": false,
          "required": false
        }
      ]
    },
    {
      "name": "menu-bar",
      "title": "Menu Bar Reminders",
      "icon": "icon.png",
      "subtitle": "Apple Reminders",
      "description": "Manage your reminders in the menu bar.",
      "mode": "menu-bar",
      "preferences": [
        {
          "name": "titleType",
          "type": "dropdown",
          "data": [
            {
              "title": "Nothing",
              "value": "nothing"
            },
            {
              "title": "Count",
              "value": "count"
            },
            {
              "title": "First Reminder",
              "value": "firstReminder"
            }
          ],
          "default": "count",
          "required": false,
          "title": "Title",
          "description": "Choose what you want to see next to the menu bar icon."
        },
        {
          "name": "view",
          "type": "dropdown",
          "data": [
            {
              "title": "Today",
              "value": "today"
            },
            {
              "title": "Upcoming",
              "value": "upcoming"
            },
            {
              "title": "All",
              "value": "all"
            }
          ],
          "default": "today",
          "required": false,
          "title": "View",
          "description": "Choose which view you want to see in your menu bar."
        },
        {
          "name": "countType",
          "type": "dropdown",
          "data": [
            {
              "title": "Today",
              "value": "today"
            },
            {
              "title": "Upcoming",
              "value": "upcoming"
            },
            {
              "title": "All",
              "value": "all"
            }
          ],
          "default": "today",
          "required": false,
          "title": "Count",
          "description": "Choose which count you want to see in your menu bar."
        },
        {
          "name": "hideMenuBarCountWhenEmpty",
          "type": "checkbox",
          "label": "Hide menu bar count when empty",
          "description": "When enabled, the number of reminders will be hidden if there are no reminders left (\"Display menu bar count\" needs to be enabled)",
          "default": false,
          "required": false
        },
        {
          "name": "sortMenuBarRemindersByDueDate",
          "type": "checkbox",
          "label": "Sort menu bar reminders by time",
          "description": "When enabled, the reminders in the menu bar will be sorted by time.",
          "default": false,
          "required": false,
          "title": "Sort"
        }
      ],
      "interval": "10m"
    },
    {
      "name": "quick-add-reminder",
      "title": "Quick Add Reminder",
      "subtitle": "Apple Reminders",
      "description": "Quickly add a reminder in Reminders.",
      "mode": "no-view",
      "preferences": [
        {
          "name": "dontUseAI",
          "type": "checkbox",
          "label": "Don't use the AI",
          "description": "When enabled, the reminder is simply added to your default list with the input as the title.",
          "default": false,
          "required": false
        },
        {
          "name": "shouldCloseMainWindow",
          "type": "checkbox",
          "title": "Advanced",
          "label": "Close window immediately",
          "description": "When enabled, the Raycast window is closed immediately, allowing you to carry on with other work.",
          "default": true,
          "required": false
        }
      ],
      "arguments": [
        {
          "name": "text",
          "placeholder": "Reminder",
          "type": "text",
          "required": true
        },
        {
          "name": "notes",
          "placeholder": "Notes",
          "type": "text",
          "required": false
        }
      ]
    },
    {
      "name": "manage-locations",
      "title": "Manage Locations",
      "subtitle": "Apple Reminders",
      "description": "Manage your saved locations.",
      "mode": "view"
    }
  ],
  "tools": [
    {
      "name": "create-reminder",
      "title": "Create Reminder",
      "description": "Create a new reminder in Apple Reminders.",
      "input": {
        "type": "object",
        "properties": {
          "title": {
            "type": "string",
            "description": "The title of the reminder."
          },
          "notes": {
            "type": "string",
            "description": "The notes for the reminder."
          },
          "dueDate": {
            "type": "string",
            "description": "The due date. Can either be a full day date (YYYY-MM-DD) or an ISO date if the time is specified (YYYY-MM-DDTHH:mm:ss.sssZ). Use sensible defaults for common timeframes (e.g \"8am\" for \"morning\", \"1pm\" for \"afternoon\", \"6pm\" for \"evening\"). A number with \"a\" or \"p\" appended (e.g. \"1p\" or \"8a\") should be treated as AM or PM. If the user didn't include a specific time, assume it's a full day reminder."
          },
          "priority": {
            "type": "string",
            "description": "The priority level. Only pick the value from this list: \"low\", \"medium\", \"high\". Use the \"high\" priority if the task text specifies a word such as \"urgent\", \"important\", or an exclamation mark."
          },
          "listId": {
            "type": "string",
            "description": "The list ID to add the reminder to. Note that the user can prepend the \"#\" or \"@\" symbols to list names, for example, \"#work\" or \"@work\"."
          },
          "address": {
            "type": "string",
            "description": "The address for location-based reminders."
          },
          "proximity": {
            "type": "string",
            "description": "The proximity trigger type. Only pick the value from this list: \"enter\", \"leave\".",
            "enum": [
              "enter",
              "leave"
            ]
          },
          "radius": {
            "type": "number",
            "description": "The radius around the location in meters."
          },
          "recurrence": {
            "type": "object",
            "properties": {
              "frequency": {
                "type": "string",
                "description": "Recurrence frequency. Only pick the value from this list: \"daily\", \"weekly\", \"monthly\", \"yearly\".",
                "enum": [
                  "daily",
                  "weekdays",
                  "weekends",
                  "weekly",
                  "monthly",
                  "yearly"
                ]
              },
              "interval": {
                "type": "number",
                "description": "Recurrence interval. An integer greater than 0 that specifies how often a pattern repeats. If a recurrence frequency is \"weekly\" rule and the interval is 1, then the pattern repeats every week. If a recurrence frequency is \"monthly\" rule and the interval is 3, then the pattern repeats every 3 months."
              },
              "endDate": {
                "type": "string",
                "description": "Recurrence end date. A full day date (YYYY-MM-DD). If no end date is specified, the recurrence will repeat forever."
              }
            },
            "required": [
              "frequency",
              "interval"
            ],
            "description": "The recurrence settings."
          }
        },
        "required": [
          "title"
        ]
      },
      "confirmation": false
    },
    {
      "name": "get-lists",
      "title": "Get Lists",
      "description": "Get all Apple Reminders lists.",
      "confirmation": false
    },
    {
      "name": "get-reminders",
      "title": "Get Reminders",
      "description": "Get all reminders from Apple Reminders.",
      "confirmation": false
    },
    {
      "name": "update-reminder",
      "title": "Update Reminder",
      "description": "Update an existing reminder in Apple Reminders.",
      "input": {
        "type": "object",
        "properties": {
          "reminderId": {
            "type": "string",
            "description": "The ID of the reminder to update."
          },
          "title": {
            "type": "string",
            "description": "The new title of the reminder."
          },
          "notes": {
            "type": "string",
            "description": "The new notes for the reminder."
          },
          "dueDate": {
            "type": "string",
            "description": "The new due date. Can either be a full day date (YYYY-MM-DD) or an ISO date if the time is specified (YYYY-MM-DDTHH:mm:ss.sssZ)."
          },
          "priority": {
            "type": "string",
            "description": "The new priority of the reminder.",
            "enum": [
              "high",
              "medium",
              "low"
            ]
          },
          "isCompleted": {
            "type": "boolean",
            "description": "Whether the reminder is completed."
          },
          "recurrence": {
            "type": "object",
            "properties": {
              "frequency": {
                "type": "string",
                "description": "Recurrence frequency. Only pick the value from this list: \"daily\", \"weekly\", \"monthly\", \"yearly\".",
                "enum": [
                  "daily",
                  "weekdays",
                  "weekends",
                  "weekly",
                  "monthly",
                  "yearly"
                ]
              },
              "interval": {
                "type": "number",
                "description": "Recurrence interval. An integer greater than 0 that specifies how often a pattern repeats. If a recurrence frequency is \"weekly\" rule and the interval is 1, then the pattern repeats every week. If a recurrence frequency is \"monthly\" rule and the interval is 3, then the pattern repeats every 3 months."
              },
              "endDate": {
                "type": "string",
                "description": "Recurrence end date. A full day date (YYYY-MM-DD). If no end date is specified, the recurrence will repeat forever."
              }
            },
            "required": [
              "frequency",
              "interval"
            ],
            "description": "The recurrence settings."
          }
        },
        "required": [
          "reminderId"
        ]
      },
      "confirmation": false
    },
    {
      "name": "delete-reminder",
      "title": "Delete Reminder",
      "description": "Delete a reminder from Apple Reminders.",
      "input": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "description": "The ID of the reminder to delete"
          },
          "confirmation": {
            "type": "object",
            "properties": {
              "title": {
                "type": "string"
              },
              "notes": {
                "type": "string"
              },
              "list": {
                "type": "object",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "title": {
                    "type": "string"
                  },
                  "color": {
                    "type": "string"
                  }
                },
                "required": [
                  "id",
                  "title",
                  "color"
                ]
              },
              "dueDate": {
                "type": "string"
              },
              "priority": {
                "type": "string",
                "enum": [
                  "high",
                  "medium",
                  "low"
                ]
              },
              "isRecurring": {
                "type": "string"
              },
              "recurrenceRule": {
                "type": "string"
              }
            },
            "required": [
              "title"
            ],
            "description": "The reminder properties to display to the user"
          }
        },
        "required": [
          "id",
          "confirmation"
        ]
      },
      "confirmation": true
    },
