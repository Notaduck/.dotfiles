# zathurarc

set font                        "Office Code Pro 10"
# Base16 Nord
# Author: arcticicestudio

set default-bg                  "#D8DEE9"
set default-fg                  "#3B4252"

set statusbar-bg                "#D8DEE9"
set statusbar-fg                "#434C5E"

set inputbar-bg                 "#D8DEE9"
set inputbar-fg                 "#bf616a"

set notification-bg             "#2E3440"
set notification-fg             "#bf616a"

set notification-error-bg       "#2E3440"
set notification-error-fg       "#bf616a"

set notification-warning-bg     "#2E3440"
set notification-warning-fg     "#bf616a"

set highlight-color             "#5E81AC"
set highlight-active-color      "#EBCB8B"

set completion-bg               "#3B4252"
set completion-fg               "#EBCB8B"

set completion-highlight-fg     "#bf616a"
set completion-highlight-bg     "#EBCB8B"

set recolor-lightcolor          "#2E3440"
set recolor-darkcolor           "#ECEFF4"

set recolor                     "true"

# setting recolor-keep true will keep any color your pdf has.
set recolor-keephue             "false"

set guioptions "c"

# add copied text to clipboard
set selection-clipboard clipboard

# enable syntex
set synctex true


set synctex-editor-command "nvim --remote-silent +%{line} %{input}"
