label-active-font = 4
label =  %percentage_used%%


;**********************************************************
;                       WLAN
;**********************************************************
[module/wlan]
type = internal/network
interface = wlp3s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
label-connected =  %essid%: %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}
label-focused-underline = ${colors.yellow} 
ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground-alt}

[module/eth]
type = internal/network
interface =  enp62s0u1u2
interval = 3.0

format-connected-prefix =
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = Wired: %local_ip%

format-disconnected =
;format-disconnected = <label-disconnected>
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

;**********************************************************
;                       WIFI
;**********************************************************

[module/wifi]
type = internal/network
interface = wlp2s0
interval = 3.0

format-connected = <label-connected>
format-connected-prefix = " "
format-connected-prefix-foreground = #5b
format-connected-underline = ${colors.green} 
;format-connected-underline = #9f78e1
;
;format-disconnected-underline = ${self.format-connected-underline}

label-connected-underline = ${colors.green} 
label-disconnected-underline = ${colors.red} 
label-connected = "%{A1:connman-gtk &:}%essid%%{A}"
label-disconnected = "%{A1:connman-gtk &:}%{A}"
label-disconnected-foreground = #5b

ramp-signal-0 = 
ramp-signal-1 = 
ramp-signal-2 = 
ramp-signal-3 = 
ramp-signal-4 = 
ramp-signal-foreground = ${colors.foreground-alt}

;**********************************************************
;                       Github
;**********************************************************

[module/github]
type = internal/github

; Accessing an access token stored in file
token = ${file:/home/daniel/.config/polybar/access.token} 

; Accessing an access token stored in an environment variable
;token = ${env:GITHUB_ACCESS_TOKEN}

; Whether empty notifications should be displayed or not
empty-notifications = false

; Number of seconds in between requests
interval = 10

; Available tags:
;   <label> (default)
format = <label>

label =" %notifications%"


;**********************************************************
;                       Github-ITU
;**********************************************************

[module/githubi-itu]
type = internal/github

