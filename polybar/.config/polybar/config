;**********************************************************
;                       I3WM
;**********************************************************

[module/i3]
type = internal/i3
# Icons
;ws-icon-[0-9]+ = label;icon
ws-icon-0 = 1;
ws-icon-1 = 2;
ws-icon-2 = 3;
ws-icon-3 = 4;
ws-icon-4 = 5;
ws-icon-5 = 6;
ws-icon-6 = 7;
ws-icon-7 = 8;
ws-icon-8 = 9;
ws-icon-9 = 10;
;ws-icon-default = 

strip-wsnumbers = true

format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false
; Only show workspaces on the same output as the bar
pin-workspaces = true

label-focused = "%name%: %icon%"
;label-focused-foreground =  ${colors.blue}
;label-focused-underline =   ${colors.blue}
;label-focused-foreground = #CC6666
label-focused-underline = ${colors.yellow} 
label-focused-padding = 2

label-unfocused = "%name%: %icon%"
label-unfocused-padding = 2
label-unfocused-underline = ${colors.foreground} 

label-urgent = "%name%: %icon%"
;label-urgent-foreground = ${colors.magenta}
;label-urgent-background = ${colors.background-alt}
label-urgent-underline = ${colors.blue}
label-urgent-padding = 2

label-visible = "%name%: %icon%"
label-visible-foreground = ${colors.background-alt}

label-visible-padding = 2

;**********************************************************
;                       XBACKLIGHT
;**********************************************************
[module/xbacklight]
type = internal/xbacklight

format = <label> <bar>
label = BL

bar-width = 10
bar-indicator = |
bar-indicator-foreground = #ff
bar-indicator-font = 2
bar-fill = ─
bar-fill-font = 2
bar-fill-foreground = #9f78e1
bar-empty = ─
bar-empty-font = 2
bar-empty-foreground = ${colors.foreground-alt}

[module/backlight-acpi]
inherit = module/xbacklight
type = internal/backlight
card = intel_backlight
;*********************************************************
;                       usb
;*********************************************************

[module/usb]
type = custom/script
interval = 10
; Could be exec = ~/.config/polybar/usb.sh /media/$USER
exec = ~/.config/polybar/usb.sh
; Unmount every devices on click
click-left = udiskie-umount -a
label = "%output:0:80%"
format = "<label>"


;**********************************************************
;                       CPU
;**********************************************************
[module/cpu]
type = internal/cpu
interval = 2
format-prefix = " "
format-prefix-foreground = ${colors.foreground-alt}

label-underline = ${colors.cyan} 
label =  %percentage%%

;**********************************************************
;                       MEMORY
;**********************************************************
[module/memory]
