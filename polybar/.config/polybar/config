[colors]

primary = #ffb52a
secondary = #e60053
alarm = =  ${xrdb:color9}
alert = ${xrdb:color1}

background = ${xrdb:background}
background-alt = ${xrdb:color12}

foreground = ${xrdb:foreground}
foreground-alt = ${xrdb:color8}

red         =  ${xrdb:color1:#555}
red-alt     =  ${xrdb:color9:#555}
green       =  ${xrdb:color2:#555}
green-alt   =  ${xrdb:color10:#555}
yellow      =  ${xrdb:color3:#555}
yellow-alt  =  ${xrdb:color11:#555}
blue        =  ${xrdb:color4:#555}
blue-alt    =  ${xrdb:color12:#555}
magenta     =  ${xrdb:color5:#555}
magenta-alt =  ${xrdb:color13:#555}
cyan        =  ${xrdb:color6:#555}
cyan-alt    =  ${xrdb:color14:#555}
white       =  ${xrdb:color7:#555}
white-alt   =  ${xrdb:color15:#555}
temp        =  #222E50

;=====================================================
;                       MAINBAR
;=====================================================

[bar/main]
monitor = ${env:MONITOR}

width = 100%
height = 25
;radius = 5
offset-x  = 10
offset-y  = 20
override-redirect = false

;fixed-center = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 3
line-color = #f00

border-size = 0
border-color = #00000000

spacing = 0
padding-left = 0
padding-right = 5
module-margin-left = 0
module-margin-right = 5

font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1
font-3 = FontAwesome:size=10;0
font-4 = Office Code Pro D medium 9


modules-left = i3
modules-center = date github github-itu
modules-right = filesystem cpu temperature battery wifi vpncheck volume

;tray-position = right
;tray-padding = 8
;tray-transparent = false
;tray-background = ${colors.background}

