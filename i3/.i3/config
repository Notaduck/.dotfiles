# i3 config file (v4)
# Variables {{{

		# set terminal
		set $term --no-startup-id termite 

		# Set mod key (Mod1=<Alt>, Mod4=<Super>)
		set $mod Mod4

	#}}}
# Startup settings {{{

		# Autostart applications
		## adjustment of i3bar battery reading (only run at the very first login):
		exec --no-startup-id /usr/lib/polkit-gnome/polkit-gnome-authentication-agent-1
		exec --no-startup-id xfce4-power-manager
		exec --no-startup-id clipit

		# exec --no-startup-id start_conky_green
		exec --no-startup-id xautolock -time 10 -locker blurlock
		#exec --no-startup-id VBoxClient-all
		exec_always --no-startup-id nm-applet
		exec --no-startup-id nextcloud
		exec --no-startup-id slack
		exec --no-startup-id umonitor -n
		exec --no-startup-id libinput-gestures
		exec --no-startup-id unclutter -keystroke -idle 15
		exec --no-startup-id i3-msg 'exec /usr/bin/pulseaudio --start'
		#exec --no-startup-id pa-applet

		# Toggle keyboard layout with Alt+shift
		exec --no-startup-id setxkbmap -layout dk,us
		exec --no-startup-id setxkbmap -option 'grp:alt_shift_toggle'

		# Autostart everytime i3 reloads
		exec_always feh --no-xinerama --bg-scale --randomize ~/.i3/wallpaper/*
		exec_always --no-startup-id compton --config ~/.config/compton.conf
    exec_always --no-startup-id ~/.config/polybar/polybar.sh

#}}}
# Bindings {{{

		# Pulse Audio controls
		# bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +10% #increase sound volume
		bindsym XF86AudioRaiseVolume exec --no-startup-id amixer -D pulse sset Master 5%+

		bindsym XF86AudioLowerVolume exec --no-startup-id amixer -D pulse sset Master 5%-

		bindsym XF86AudioMute exec --no-startup-id amixer -D pulse set Master 1+ toggle

		# Sreen brightness controls
		#bindsym XF86MonBrightnessUp exec xbacklight -inc 20 # increase screen brightness
		#bindsym XF86MonBrightnessDown exec xbacklight -dec 20 # decrease screen brightness

		# Media player controls
		bindsym XF86AudioPlay exec playerctl play-pause
		bindsym XF86AudioNext exec playerctl next
		bindsym XF86AudioPrev exec playerctl previous

		# Launc flameshot
		bindsym Print exec flameshot gui
		bindcode 225  exec web-search 

		# bindcode 133 + 32  exec web-search 
		# Autohide polybar
		bindsym $mod+m exec --no-startup-id ~/.dotfiles/polybar/.config/polybar/autohide.sh 

		# Open lightscreen (screenshot tool)
		bindsym $mod+Shift+i exec --no-startup-id lightscreen

		# Open git terminal (scratchpad)
		bindsym $mod+g [instance="git"] scratchpad show; [instance="git"] move position center

		# Open weechat terminal (scratchpad)
		bindsym $mod+v [instance="weechat"] scratchpad show; [instance="weechat"] move position center

		# Open weechat terminal (scratchpad)
		bindsym $mod+t [instance="todo"] scratchpad show; [instance="todo"] move position center
		# change borders
		bindsym $mod+u border none
		bindsym $mod+y border pixel 1
		bindsym $mod+n border normal

		# Move workspaces between monitor
		bindsym $mod+Tab exec i3-msg move workspace to output right

		# kill focused window
		bindsym $mod+Shift+q kill

		# start program launcher[Rofi]]
		bindsym $mod+d exec --no-startup-id /home/daniel/.config/rofi/launcher
		#bindsym $mod+d exec --no-startup-id rofi -show run

		# netwrkmanager_dmenu
		bindsym $mod+i exec --no-startup-id /usr/bin/networkmanager_dmenu -font "Noto sans 10"
		# launch categorized menu
		bindsym $mod+z exec --no-startup-id morc_menu

		# Open pulseaudio UI 
		bindsym $mod+Ctrl+m exec pavucontrol

		# Open $term emulator
		bindsym $mod+Return exec $term 

		# move workspace to right or left monitor output
		bindsym $mod+Alt+Left i3-msg move workspace to output left
		bindsym $mod+Alt+Right i3-msg move workspace to output right

		# focus_follows_mouse no
		# change focus
		bindsym $mod+Left focus left
		bindsym $mod+Down focus down
		bindsym $mod+Up focus up
		bindsym $mod+Right focus right

		# change focus (vim style)
		bindsym $mod+h focus left
		bindsym $mod+j focus down
		bindsym $mod+k focus up
		bindsym $mod+l focus right

		# move focused window
		bindsym $mod+Shift+Left move left
		bindsym $mod+Shift+Down move down
		bindsym $mod+Shift+Up move up
		bindsym $mod+Shift+Right move right

		# move focused window (vim style)
		bindsym $mod+Shift+h move left
		bindsym $mod+Shift+j move down
		bindsym $mod+Shift+k move up
		bindsym $mod+Shift+l move right

		# workspace back and forth (with/without active container)
		# bindsym $mod+b workspace back_and_forth
		bindsym $mod+b exec /home/daniel/.scripts/book-search 
		bindsym $mod+Shift+b move container to workspace back_and_forth; workspace back_and_forth

		# split orientation
		#bindsym $mod+h split h;exec notify-send 'tile horizontally'
		# bindsym $mod+v split v;exec notify-send 'tile vertically'
		bindsym $mod+q split toggle

		# toggle fullscreen mode for the focused container

		bindsym $mod+f fullscreen toggle

		# change container layout (stacked, tabbed, toggle split)
		bindsym $mod+s layout stacking
		bindsym $mod+w layout tabbed
		bindsym $mod+e layout toggle split

		# toggle tiling / floating
		#bindsym $mod+Shift+space floating toggle
		bindsym $mod+Shift+space exec --no-startup-id /path/to/i3ipc_hideshow_border; floating toggle border pixel 0

		# change focus between tiling / floating windows
		bindsym $mod+space focus mode_toggle

		# toggle sticky
		bindsym $mod+Shift+s sticky toggle

		# focus the parent container
		bindsym $mod+a focus parent

		# Make the currently focused window a scratchpad
		bindsym $mod+Shift+minus move scratchpad

		# Show the first scratchpad window
		bindsym $mod+minus scratchpad show

		# reload the configuration file
		bindsym $mod+Shift+c reload

		# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
		bindsym $mod+Shift+r restart

		# exit i3 (logs you out of your X session)
		bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"

		# Set shut down, restart and locking features
		bindsym $mod+0 mode "$mode_system"
		set $mode_system (l)ock, (e)xit, switch_(u)ser, (s)uspend, (h)ibernate, (r)eboot, (Shift+s)hutdown
		mode "$mode_system" {
				bindsym l exec --no-startup-id i3exit lock, mode "default"
				bindsym s exec --no-startup-id i3exit suspend, mode "default"
				bindsym u exec --no-startup-id i3exit switch_user, mode "default"
				bindsym e exec --no-startup-id i3exit logout, mode "default"
				bindsym h exec --no-startup-id i3exit hibernate, mode "default"
				bindsym r exec --no-startup-id i3exit reboot, mode "default"
				bindsym Shift+s exec --no-startup-id i3exit shutdown, mode "default"

				# exit system mode: "Enter" or "Escape"
				bindsym Return mode "default"
				bindsym Escape mode "default"
		}

		# Resize window (you can also use the mouse for that)
		bindsym $mod+r mode "resize"
		mode "resize" {
						bindsym l resize shrink width 5 px or 5 ppt
						bindsym j resize grow height 5 px or 5 ppt
						bindsym k resize shrink height 5 px or 5 ppt
						bindsym h resize grow width 5 px or 5 ppt

						# same bindings, but for the arrow keys
						bindsym Left resize shrink width 5 px or 5 ppt
						bindsym Down resize grow height 5 px or 5 ppt
						bindsym Up resize shrink height 5 px or 5 ppt
						bindsym Right resize grow width 5 px or 5 ppt

						# exit resize mode: Enter or Escape
						bindsym Return mode "default"
						bindsym Escape mode "default"

	}
#}}}
